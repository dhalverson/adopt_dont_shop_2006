<h1>Pet Information</h1>

<h2><%= image_tag "#{@pet.image}", :size => "260x180" %></h2>
<p><%= @pet.name %></p>
<p><%= @pet.age %></p>
<p><%= @pet.sex %> </p>

<p><%= link_to "Update Pet", "/pets/#{@pet.id}/edit", method: :post %></p>
<p><%= link_to 'Delete Pet', "/pets/#{@pet.id}", method: :delete %></p>
